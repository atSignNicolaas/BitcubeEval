@model IEnumerable<Trainingfacility_Bitcube.Models.Courses>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                <a asp-controller="Degree" asp-action="Details" asp-route-id="@item.DegreeId">@Html.DisplayFor(modelItem => item.Degree.Name)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CoursesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CoursesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CoursesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
